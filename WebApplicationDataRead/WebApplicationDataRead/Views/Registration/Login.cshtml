@model WebApplicationDataRead.Context.RegistrationUser
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

@using (Html.BeginForm("LoginPage", "Registration", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(x => x.User_Id, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(x => x.User_Id, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.User_Id, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Password, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password" })
        @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
    </div>

<div class="form-group">
    <input type="submit" value="Login" class="btn btn-primary" />
</div>
}

