@model List<WebApplicationDataRead.Context.EmployeeTable>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<hr />
<hr />

<table class="table table-hover">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>Name</th>
            <th>Joining Date</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Salary</th>
            <th>Designation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.JoingDate?.ToString("yyyy-MM-dd")</td>
                <td>@item.Email</td>
                <td>@item.Call</td>
                <td>@item.Salay</td>
                <td>@item.designation</td>
            </tr>
        }
    </tbody>
</table>
