@model List<WebApplicationAccounrt.ConText.Account>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    setTimeout(() => {
        const box = document.getElementById('hide');
        if (box) {
            box.style.transition = 'opacity 0.5s';
            box.style.opacity = '0';
            setTimeout(() => box.style.display = 'none', 500);
        }
    }, 3000);
</script>

<h2>Index</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Opning Date</th>
            <th>Balance</th>
            <th>Type</th>
            <th>Email</th>
            <th>Phone</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>@item.Id</td>*@
                <td>@item.Title</td>
                <td>@item.OpingDate</td>
                <td>@item.Balance</td>
                <td>@item.Type</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>
                    <a href="@Url.Action("AccountInfoDelete",new{ item.Id})" , class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i>Remove</a>  |
                    <a href="@Url.Action("AccountInfoEdit",new { item.Id,item.Balance})" , class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i>Updete Balance</a>

                </td>
            </tr>
        }
    </tbody>
