@model List<WebApplicationAccounrt.ConText.Account>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    setTimeout(() => {
        const box = document.getElementById('hide');
        if (box) {
            box.style.transition = 'opacity 0.5s';
            box.style.opacity = '0';
            setTimeout(() => box.style.display = 'none', 500);
        }
    }, 3000);
</script>
<script type="text/javascript">
    function confirmDelete() {
        return confirm("Are you sure you want to delete this employee?");
    }
</script>

<h2>Index</h2>

<a href="@Url.Action("AccountInfo", "CreateAccount")" class="btn btn-primary">Create Account</a>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success" id="hide">
        <strong>Good Job!!</strong>
        @TempData["Success"]
    </div>
}
<table class="table table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Opning Date</th>
            <th>Balance</th>
            <th>Type</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Action</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>@item.Id</td>*@
            <td>@item.Title</td>
            <td>@item.OpingDate</td>
            <td>@item.Balance</td>
            <td>@item.Type</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>
            <td>

                <a href="@Url.Action("BalanceInfoEdit", new { item.Id,item.Balance,item.Title})" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> Update Balance</a>
                |
                <a href="@Url.Action("AccountInfoDelete", new { id = item.Id, balance = item.Balance })" class="btn btn-danger" onclick="return confirmDelete();"> <i class="bi bi-trash"></i> Remove</a>
            </td>
        </tr>
    }
</table>

