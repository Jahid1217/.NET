@model List<WebApplicationStudentSystem.Context.StudentsInformation>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<script>
    setTimeout(() => {
        const box = document.getElementById('hide');
        if (box) {
            box.style.transition = 'opacity 0.5s';
            box.style.opacity = '0';
            setTimeout(() => box.style.display = 'none', 500);
        }
    }, 3000);
</script>
@if (TempData["Success"] != null)
{
    <div id="hide" class="alert alert-success">
        @TempData["Success"]
    </div>
}
<hr />
<a href="@Url.Action("StronglyTypedHelper", "StudentInfo")" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i>Create Student Strongly Typed Helper</a>
<a href="@Url.Action("StandardHelperStudent", "StudentInfo")" class="btn btn-primary"><i class="bi bi-plus"></i>Create Student Standard Helper</a>
<a href="@Url.Action("TemplatedHelper", "StudentInfo")" class="btn btn-primary"><i class="bi bi-plus"></i>Create Student Templated Helper</a>
<hr />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>CGPA</th>
            <th>Blood Group</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.DOB.ToString("yyyy-MM-dd")</td>
                <td>@student.Email</td>
                <td>@student.PhoneNumber</td>
                <td>@student.CGPA</td>
                <td>@student.BloodGroup.ToString()</td>
            </tr>
        }
    </tbody>
